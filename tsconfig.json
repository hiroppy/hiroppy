{
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true
  },
  "include": [
    "scripts/*.ts",
    "data/*.ts",
    "types/generated.d.ts",
    "generated/types/*.d.ts"
  ]
}
